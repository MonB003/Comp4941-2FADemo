@page
@model _2FADemo.Pages.RegisterModel
@{
}



@if (string.IsNullOrEmpty(Model.QrCodeUrl)) {
	@* Show registration form *@
	<form method="post">
		<p>@Html.LabelFor(n => n.EmailAddress)</p>
		@Html.EditorFor(n => n.EmailAddress)

		<button type="submit">Register</button>
	</form>
}
else {
	@* Display new user's QR code once they are registered *@
	<img src="@Model.QrCodeUrl" />

	<p>@Model.ManualEntryCode</p>
}